{
  "name": "mindsphere-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "MindSphere - Multi-service mental wellness platform",
  "workspaces": [
    "mindsphere-backend",
    "mindsphere-frontend", 
    "mindsphere-ai-agent",
    "mindsphere-mobile"
  ],
  "scripts": {
    "start:backend": "cd mindsphere-backend && npm start",
    "start:frontend": "cd mindsphere-frontend && npm run dev",
    "start:agent": "cd mindsphere-ai-agent && npm start",
    "start:mobile": "cd mindsphere-mobile && npm start",
    "build:backend": "cd mindsphere-backend && npm run build",
    "build:frontend": "cd mindsphere-frontend && npm run build",
    "test": "npm run test --workspaces",
    "clean": "rm -rf node_modules mindsphere-*/node_modules",
    "push": "bash push-all-repos.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jainrahulchaplot/Mindsphere.git"
  },
  "author": "Rahul",
  "license": "UNLICENSED",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
