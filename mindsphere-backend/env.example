# MindSphere Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===========================================
# Server Configuration
# ===========================================
PORT=8000
NODE_ENV=development
FRONTEND_ORIGIN=*

# ===========================================
# Supabase Configuration
# ===========================================
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_AUTH_ENABLED=false

# ===========================================
# OpenAI Configuration
# ===========================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-realtime-preview-2024-10-01

# ===========================================
# Google Cloud TTS Configuration
# ===========================================
GOOGLE_APPLICATION_CREDENTIALS=./path/to/service-account.json
TTS_PROVIDER=cloud_tts
CLOUD_TTS_VOICE=en-US-Studio-O
CLOUD_TTS_RATE=0.85
CLOUD_TTS_PITCH=-2.0
CLOUD_TTS_DEVICE_PROFILE=small-bluetooth-speaker-class-device

# ===========================================
# LiveKit Configuration (CRITICAL - MOVE FROM SOURCE CODE)
# ===========================================
LIVEKIT_URL=wss://your-livekit-server.com
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# ===========================================
# Gemini Configuration (Optional)
# ===========================================
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=backend.log

# ===========================================
# Security Configuration
# ===========================================
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here
CORS_ORIGIN=http://localhost:5173

# ===========================================
# Performance Configuration
# ===========================================
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000
